{% extends "admin.html.twig" %}



{% block form %}
    <div class="container">
        <div class="row">
            
            <main class="right_col">
                <h1>Liste des utilisateurs</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>RÃ´les</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usr in users %}
                            <tr>
                                <td>{{ usr.id }}</td>
                                <td>{{ usr.name }}</td>
                                <td>{{ usr.username }}</td>
                                <td>{{ usr.email }}</td>
                                

                                <td>
                                    {% for role in usr.roles %}
                                        {% if role == "ROLE_ADMIN" %}
                                            {% set name = "Administrateur" %}
                                            {% set color = "danger" %}
                                        {% elseif role == "ROLE_PRODUCT_ADMIN" %}
                                            {% set name = "Admin produits" %}
                                            {% set color = "warning" %}
                                        {% else %}
                                            {% set name = "Membre" %}
                                            {% set color = "success" %}
                                        {% endif %}
                                        <span class="badge bg-{{ color }}">{{ name }}</span>
                                    {% endfor %}
                                    
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        
                                        <label class="form-check-label" for="switch{{ usr.id }}"></label>
                                    </div>
                                </td>
                                <td>
                                    <a href="{{ path('app_delete_user', {'id': usr.id}) }}">Delete</a>
                                    <a href="{{ path('app_edit_user', {'id': usr.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}