{% extends 'base.html.twig' %}

{% block title %}Comm index{% endblock %}

{% block body %}
    <h1>Comm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comm in comms %}
            <tr>
                <td>{{ comm.id }}</td>
                <td>{{ comm.contenu }}</td>
                <td>{{ comm.createdAt ? comm.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_comm_show', {'id': comm.id}) }}">show</a>
                    <a href="{{ path('app_comm_edit', {'id': comm.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comm_new') }}">Create new</a>
{% endblock %}
