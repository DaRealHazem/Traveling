    <a href="{{ path('add-blog') }}" class="btn btn-info btn-xs">
        <i class="fa fa-pencil"></i> Ajouter un article
    </a>
    <a href="{{ path('favorite_blogs') }}" class="btn btn-warning"><i class="fa fa-star"></i> Mes Favoris</a>

</div>
           {% if blogs is not defined or blogs is empty %}
    <h3>Aucun blog</h3>
{% else %}
    <div class="container">
        <div class="row">
            {% for blog in blogs %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="package-item bg-white mb-2 border rounded p-3"> 
                        <div class="position-relative">
                        
                        <h6 class="d-flex justify-content-between mb-3"> {{ blog.TITRE|upper }}</h6>
                         </div>
                           <div class="border-top mt-4 pt-4">
                            <img src="{{ asset('uploads/images/' ~ blog.imageb) }}" alt="teswira" />
                            
                        <div class="p-4">
                           
                                 <div class="d-flex justify-content-between">
                                    {% set contentLines = blog.CONTENT|split("\n") %}
                                    {% set slicedContent = contentLines|slice(0, 2)|join("\n") %}
                                    {{ slicedContent }}
                                </div>
                            </div>
                           <div class="border-top mt-4 pt-4">
    <small class="font-weight-bold mb-n1">{{ blog.date|date('d-m-y ') }}</small>
    <a href="{{ path('blog_details', {'id': blog.id}) }}" class="btn btn-primary mr-2">voir plus de DÃ©tails</a>
   </div>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
     {{ knp_pagination_render(blogs) }}
{% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
